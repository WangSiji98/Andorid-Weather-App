<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".SearchDetails">
  <androidx.cardview.widget.CardView
    android:id="@+id/search_details_progressbar"
    android:layout_width="391dp"
    android:layout_height="719dp"
    android:layout_marginEnd="1dp"
    android:visibility="gone"
    app:cardBackgroundColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="393dp"
      android:layout_height="match_parent">

      <ProgressBar
        android:id="@+id/search_progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="347dp"
        android:indeterminateTint="@color/white"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintBottom_toTopOf="@+id/search_textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
      />
      <TextView
        android:id="@+id/search_textView2"
        android:layout_width="173dp"
        android:layout_height="21dp"
        android:layout_marginBottom="359dp"
        android:text="@string/progress_fetching_data"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_progressBar2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/search_details_tool_bar4"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:layout_constraintTop_toTopOf="parent"
    app:title="WeatherApp"></androidx.appcompat.widget.Toolbar>
  <androidx.viewpager2.widget.ViewPager2
    android:id="@+id/search_details_viewpage2"
    android:layout_width="393dp"
    android:layout_height="633dp"
    android:background="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
  <com.google.android.material.tabs.TabLayout
    android:id="@+id/search_details_tab"
    android:layout_width="394dp"
    android:layout_height="90dp"
    android:layout_marginTop="56dp"
    android:background="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tabIconTint="@color/white"
    app:tabIndicatorColor="@color/white"
    app:tabSelectedTextColor="@color/white"
    app:tabTextColor="@color/tab_no_select"></com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>